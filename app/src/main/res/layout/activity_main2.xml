<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MajorActivity.MainActivity2">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.ChatApplication.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/Theme.ChatApplication.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar"
        android:background="@drawable/light_background">

        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgSaveCover1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/save"
                android:layout_marginLeft="360dp"
                android:layout_marginTop="200dp"/>
            <ImageView
                android:id="@+id/imgCover1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/ic_cover"
                android:scaleType="centerCrop"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgEditCover1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/edit"
                android:layout_marginLeft="360dp"
                android:layout_marginTop="200dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtProfile1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/halloween_dreams_script"
                android:layout_centerHorizontal="true"
                android:text="Profile"
                android:layout_below="@id/imgEditProfile1"
                android:layout_marginTop="25dp"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgSaveProfile1"
                android:layout_width="50dp"
                android:layout_height="53dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="250dp"
                android:src="@drawable/save" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfileFragment1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="155dp"
                android:src="@drawable/download"
                app:civ_border_color="@color/white"
                app:civ_border_width="5dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgEditProfile1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/edit"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="270dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgEditProfiletxt1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/edit"
                android:layout_toRightOf="@id/txtProfile1"
                android:layout_marginTop="345dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="425dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfileInsta1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/insta"
                android:padding="10dp"
                android:layout_weight="1"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfileFaceBook1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/fb"
                android:padding="10dp"
                android:layout_weight="1"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfileWebsite1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/website"
                android:padding="10dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="480dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgEditInsta1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/edit"
                android:padding="10dp"
                android:layout_marginLeft="90dp"
                android:layout_weight="1"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgEditFaceBook1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/edit"
                android:padding="10dp"
                android:layout_marginLeft="90dp"
                android:layout_weight="1"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgEditWebsite1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/edit"
                android:padding="10dp"
                android:layout_marginLeft="90dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/profileProgressbar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/btnContinue"
            android:textColor="@color/white"
            android:text="Continue"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</RelativeLayout>