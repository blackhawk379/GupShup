<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_attempt"
    tools:context=".MajorActivity.SplashScreenActivity2">
    <TextView
        android:id="@+id/txtAppTitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="GupShup"
        android:gravity="center_horizontal"
        android:textSize="140sp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/funky_vibes"
        style="bold"/>
    <TextView
        android:id="@+id/txtCompanyTitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="NAVDHARA"
        android:textSize = "30sp"
        android:textColor="@color/black"
        android:fontFamily="@font/lt_energy"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="175dp" />
    <TextView
        android:id="@+id/txtFrom2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="from"
        android:layout_above="@+id/txtCompanyTitle2"/>

</RelativeLayout>