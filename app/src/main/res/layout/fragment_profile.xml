<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ProfileFragment"
    android:background="@drawable/light_background">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgCover"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/ic_cover"
            android:scaleType="centerCrop"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgEditCover"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/edit"
            android:layout_marginLeft="360dp"
            android:layout_marginTop="200dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/halloween_dreams_script"
            android:layout_centerHorizontal="true"
            android:text="Profile"
            android:layout_below="@id/imgEditProfile"
            android:layout_marginTop="25dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfileFragment"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="155dp"
        android:src="@drawable/download"
        app:civ_border_color="@color/white"
        app:civ_border_width="5dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgEditProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/edit"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="270dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgEditProfiletxt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/edit"
            android:layout_toRightOf="@id/txtProfile"
            android:layout_marginTop="345dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="425dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfileInsta"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/insta"
            android:padding="10dp"
            android:layout_weight="1"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfileFaceBook"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/fb"
            android:padding="10dp"
            android:layout_weight="1"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfileWebsite"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/website"
            android:padding="10dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="480dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgEditInsta"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/edit"
            android:padding="10dp"
            android:layout_marginLeft="90dp"
            android:layout_weight="1"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgEditFaceBook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/edit"
            android:padding="10dp"
            android:layout_marginLeft="90dp"
            android:layout_weight="1"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgEditWebsite"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/edit"
            android:padding="10dp"
            android:layout_marginLeft="90dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/verifyStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_gravity="bottom"
        tools:ignore="RtlCompat" />
    <ProgressBar
        android:id="@+id/profileProgressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</FrameLayout>